@model Parking.Models.Vehicle

@{
    ViewData["Title"] = "CheckOut";
}

<h1>@ViewData["Title"]</h1>

<h4>Model: @ViewData["Model"] Plate: @ViewData["Plate"]  </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
               
                <input type="hidden" asp-for="Model"  class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group">
               
                <input type="hidden" asp-for="Plate" class="form-control" />
                <span asp-validation-for="Plate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label type="hidden" asp-for="Input"  class="control-label"></label>
                <input  asp-for="Input" readonly class="form-control" />
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Output" class="control-label"></label>
                <input asp-for="Output" class="form-control" />
                <span asp-validation-for="Output" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Checkout now" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
